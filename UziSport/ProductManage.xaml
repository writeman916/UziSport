<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="UziSport.ProductManage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Shell.NavBarIsVisible="False">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="300" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  Header  -->
        <Grid
            x:Name="ProductDetail"
            Grid.Row="0"
            Margin="30,10,10,10"
            ColumnDefinitions="*,*,*,*"
            ColumnSpacing="10"
            RowDefinitions="*,*,*,*">

            <!--  Column 1  -->
            <HorizontalStackLayout
                Grid.Row="0"
                Grid.Column="0"
                Spacing="10">
                <Label>Barcode</Label>
                <Entry
                    x:Name="BarcodeEntry"
                    HeightRequest="50"
                    Placeholder="Barcode"
                    WidthRequest="200 " />
            </HorizontalStackLayout>

            <HorizontalStackLayout
                Grid.Row="1"
                Grid.Column="0"
                Grid.ColumnSpan="2"
                Spacing="10">
                <Label>Tên Sản Phẩm</Label>
                <Entry
                    x:Name="ProductNameEntry"
                    HeightRequest="50"
                    Placeholder="Tên Sản Phẩm"
                    WidthRequest="390" />
            </HorizontalStackLayout>

            <HorizontalStackLayout
                Grid.Row="2"
                Grid.Column="0"
                Grid.ColumnSpan="2"
                Spacing="10">
                <Label>Danh mục</Label>
                <Picker
                    x:Name="CatalogPicker"
                    HeightRequest="50"
                    WidthRequest="180" />
                <Label>Hãng</Label>
                <Picker
                    x:Name="BrandPicker"
                    HeightRequest="50"
                    WidthRequest="180" />
            </HorizontalStackLayout>

            <HorizontalStackLayout
                Grid.Row="3"
                Grid.Column="0"
                Grid.ColumnSpan="2"
                Spacing="10">
                <Label>Thông số kĩ thuật</Label>
                <Entry
                    x:Name="SpecificationEntry"
                    HeightRequest="50"
                    Placeholder="Thông số kĩ thuật"
                    WidthRequest="370" />
            </HorizontalStackLayout>

            <HorizontalStackLayout
                Grid.Row="0"
                Grid.Column="2"
                Spacing="10">
                <Label>Giá vốn</Label>
                <Entry
                    x:Name="CostEntry"
                    HeightRequest="50"
                    Keyboard="Numeric"
                    Placeholder="Giá vốn"
                    WidthRequest="200" />
            </HorizontalStackLayout>

            <HorizontalStackLayout
                Grid.Row="1"
                Grid.Column="2"
                Spacing="10">
                <Label>Giá bán</Label>
                <Entry
                    x:Name="PriceEntry"
                    HeightRequest="50"
                    Keyboard="Numeric"
                    Placeholder="Giá bán"
                    WidthRequest="200" />
            </HorizontalStackLayout>

            <HorizontalStackLayout
                Grid.Row="4"
                Grid.Column="2"
                Margin="10"
                HorizontalOptions="End"
                Spacing="10">
                <Button
                    BackgroundColor="DarkGreen"
                    HeightRequest="50"
                    Text="Lưu"
                    WidthRequest="100" />
                <Button
                    BackgroundColor="DarkRed"
                    HeightRequest="50"
                    Text="Xóa"
                    WidthRequest="100" />
            </HorizontalStackLayout>

            <Frame
                Grid.Row="0"
                Grid.RowSpan="4"
                Grid.Column="3"
                Margin="10"
                CornerRadius="10"
                VerticalOptions="Fill">

                <Grid Padding="10" RowDefinitions="Auto,*,Auto">

                    <!--  Header: Số tiền  -->
                    <Label
                        Grid.Row="0"
                        FontAttributes="Bold"
                        HorizontalTextAlignment="Start"
                        Text="Giá vốn theo combo" />

                    <!--  Danh sách  -->
                    <CollectionView
                        Grid.Row="1"
                        Margin="0,5,10,0"
                        ItemsSource="{Binding ComboCosts}">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <!--  Mỗi record: Số tiền + nút X  -->
                                <Grid ColumnDefinitions="*,Auto" RowSpacing="2">
                                    <HorizontalStackLayout
                                        Grid.Column="0"
                                        HeightRequest="30"
                                        VerticalOptions="Center">
                                        <Label
                                            Grid.Column="0"
                                            Margin="2,0,0,0"
                                            HorizontalTextAlignment="Start"
                                            Text="{Binding Cost, StringFormat='{}{0:N0}'}"
                                            VerticalTextAlignment="Center" />

                                        <!--  Nút Xóa  -->
                                        <Button
                                            Grid.Column="1"
                                            Margin="6,0,0,0"
                                            BackgroundColor="Transparent"
                                            Clicked="DeleteButton_Clicked"
                                            FontSize="16"
                                            Text="✕"
                                            TextColor="Red"
                                            WidthRequest="32" />
                                    </HorizontalStackLayout>

                                </Grid>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>

                    <!--  Dòng mới luôn ở cuối: Entry nhập số + nút Thêm  -->
                    <Grid
                        Grid.Row="2"
                        Padding="0,8,0,0"
                        ColumnDefinitions="*,Auto">

                        <Entry
                            x:Name="NewCostEntry"
                            Grid.Column="0"
                            Completed="NewCostEntry_Completed"
                            Keyboard="Numeric"
                            Placeholder="Nhập số tiền" />

                        <Button
                            Grid.Column="1"
                            Clicked="AddButton_Clicked"
                            Text="+"
                            WidthRequest="40" />
                    </Grid>

                </Grid>
            </Frame>
        </Grid>
    </Grid>
</ContentPage>