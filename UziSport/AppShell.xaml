<?xml version="1.0" encoding="utf-8" ?>
<Shell
    x:Class="UziSport.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:UziSport"
    FlyoutWidth="250">

    <!--  PHẦN 1: Header trên Flyout (tên + logo)  -->
    <Shell.FlyoutHeader>
        <Grid Padding="16">
            <VerticalStackLayout Spacing="12" VerticalOptions="Center">
                <Image
                    Aspect="AspectFit"
                    HeightRequest="200"
                    Source="icon_uzi.jpg"
                    WidthRequest="200" />
                <Label
                    FontAttributes="Bold"
                    FontSize="24"
                    HorizontalOptions="Center"
                    Text="UziSport" />
            </VerticalStackLayout>
        </Grid>
    </Shell.FlyoutHeader>

    <FlyoutItem Title="Trang chính" Icon="dotnet_bot.png">
        <ShellContent Title="MainPage" ContentTemplate="{DataTemplate views:MainPage}" />
    </FlyoutItem>

    <!--  Các màn hình con, xuất hiện ngay bên dưới  -->
    <FlyoutItem Title="Quản lý sản phẩm" Icon="dotnet_bot.png">
        <ShellContent Title="Quản lý sản phẩm" ContentTemplate="{DataTemplate views:ProductManage}" />
    </FlyoutItem>

    <FlyoutItem Title="Quản lý nhập kho" Icon="dotnet_bot.png">
        <ShellContent Title="Quản lý nhập kho" ContentTemplate="{DataTemplate views:StockInManage}" />
    </FlyoutItem>

</Shell>
