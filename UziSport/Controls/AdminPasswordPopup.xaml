<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    x:Class="UziSport.Controls.AdminPasswordPopup"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!--  Nền mờ để làm popup  -->
    <Grid BackgroundColor="#80000000">
        <Grid
            Padding="20"
            HorizontalOptions="Center"
            VerticalOptions="Center">

            <Frame
                Padding="20"
                BackgroundColor="White"
                CornerRadius="10"
                HasShadow="True"
                WidthRequest="350">

                <VerticalStackLayout Spacing="15">
                    <!--  Tiêu đề  -->
                    <Label
                        FontAttributes="Bold"
                        FontSize="20"
                        HorizontalOptions="Center"
                        Text="Mật khẩu Admin" />

                    <!--  Nhập mật khẩu hiện tại  -->
                    <VerticalStackLayout Spacing="5">
                        <Label Text="Mật khẩu hiện tại" />
                        <Entry
                            x:Name="CurrentPasswordEntry"
                            IsPassword="True"
                            Keyboard="Default"
                            Placeholder="Nhập mật khẩu admin" />
                    </VerticalStackLayout>

                    <!--  Nút xác nhận  -->
                    <HorizontalStackLayout
                        Margin="0,5,0,0"
                        HorizontalOptions="Center"
                        Spacing="15">
                        <Button Clicked="OnConfirmClicked" Text="Xác nhận" />

                        <Button Clicked="OnCloseClicked" Text="Đóng" />
                    </HorizontalStackLayout>

                    <!--  Đường kẻ ngăn  -->
                    <BoxView
                        Margin="0,10,0,0"
                        BackgroundColor="#DDDDDD"
                        HeightRequest="1" />

                    <!--  Phần đổi mật khẩu  -->
                    <Label FontAttributes="Bold" Text="Đổi mật khẩu" />

                    <VerticalStackLayout Spacing="5">
                        <Label Text="Mật khẩu mới" />
                        <Entry
                            x:Name="NewPasswordEntry"
                            IsPassword="True"
                            Keyboard="Default"
                            Placeholder="Nhập mật khẩu mới" />
                    </VerticalStackLayout>

                    <VerticalStackLayout Spacing="5">
                        <Label Text="Xác nhận mật khẩu mới" />
                        <Entry
                            x:Name="ConfirmPasswordEntry"
                            IsPassword="True"
                            Keyboard="Default"
                            Placeholder="Nhập lại mật khẩu mới" />
                    </VerticalStackLayout>

                    <Button
                        Margin="0,5,0,0"
                        Clicked="OnChangePasswordClicked"
                        Text="Cập nhật mật khẩu" />

                    <!--  Thông báo  -->
                    <Label
                        x:Name="MessageLabel"
                        FontSize="13"
                        LineBreakMode="WordWrap"
                        TextColor="Red" />
                </VerticalStackLayout>
            </Frame>
        </Grid>
    </Grid>
</ContentView>
