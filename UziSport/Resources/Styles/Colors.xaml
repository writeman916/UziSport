<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- 
        Theme:
        - Nền: trắng hơi xám, rất sáng (dùng cho Page, Content, Card)
        - Text / Button: đen xám (không quá đen tuyệt đối)
    -->

    <!-- Core brand colors -->
    <Color x:Key="Primary">#F5F5F7</Color>
    <!-- Main page background (gần trắng, hơi xám) -->
    <Color x:Key="PrimaryDark">#E4E6EB</Color>
    <!-- Surface / card background -->
    <Color x:Key="PrimaryDarkText">#22252A</Color>
    <!-- Text chính trên nền sáng (đen xám) -->

    <Color x:Key="Secondary">#353841</Color>
    <!-- Màu tối cho button, header, toolbar -->
    <Color x:Key="SecondaryDarkText">#F5F5F7</Color>
    <!-- Text trên nền Secondary -->

    <Color x:Key="Tertiary">#4F46E5</Color>
    <!-- Accent (link, icon nổi bật, button đặc biệt) -->

    <!-- Soft whites / blacks (không quá trắng, không quá đen) -->
    <Color x:Key="White">#F9FAFB</Color>
    <!-- White hơi xám, dịu mắt -->
    <Color x:Key="Black">#1F2933</Color>
    <!-- Đen xám, không #000000 -->
    <Color x:Key="Magenta">#D600AA</Color>
    <Color x:Key="MidnightBlue">#252A3D</Color>
    <Color x:Key="OffBlack">#252A33</Color>

    <!-- Neutral grays -->
    <Color x:Key="Gray100">#F3F4F6</Color>
    <Color x:Key="Gray200">#E5E7EB</Color>
    <Color x:Key="Gray300">#D1D5DB</Color>
    <Color x:Key="Gray400">#9CA3AF</Color>
    <Color x:Key="Gray500">#6B7280</Color>
    <!-- Text phụ, label -->
    <Color x:Key="Gray600">#4B5563</Color>
    <!-- Text mạnh hơn, subtitle -->
    <Color x:Key="Gray900">#111827</Color>
    <Color x:Key="Gray950">#020617</Color>

    <!-- Semantic colors (khi cần) -->
    <Color x:Key="Success">#16A34A</Color>
    <Color x:Key="Warning">#F59E0B</Color>
    <Color x:Key="Danger">#DC2626</Color>
    <Color x:Key="Info">#2563EB</Color>

    <!-- Brushes for main colors -->
    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource Primary}" />
    <SolidColorBrush x:Key="SecondaryBrush" Color="{StaticResource Secondary}" />
    <SolidColorBrush x:Key="TertiaryBrush" Color="{StaticResource Tertiary}" />
    <SolidColorBrush x:Key="WhiteBrush" Color="{StaticResource White}" />
    <SolidColorBrush x:Key="BlackBrush" Color="{StaticResource Black}" />

    <!-- Neutral brushes -->
    <SolidColorBrush x:Key="Gray100Brush" Color="{StaticResource Gray100}" />
    <SolidColorBrush x:Key="Gray200Brush" Color="{StaticResource Gray200}" />
    <SolidColorBrush x:Key="Gray300Brush" Color="{StaticResource Gray300}" />
    <SolidColorBrush x:Key="Gray400Brush" Color="{StaticResource Gray400}" />
    <SolidColorBrush x:Key="Gray500Brush" Color="{StaticResource Gray500}" />
    <SolidColorBrush x:Key="Gray600Brush" Color="{StaticResource Gray600}" />
    <SolidColorBrush x:Key="Gray900Brush" Color="{StaticResource Gray900}" />
    <SolidColorBrush x:Key="Gray950Brush" Color="{StaticResource Gray950}" />

    <!-- Semantic brushes -->
    <SolidColorBrush x:Key="SuccessBrush" Color="{StaticResource Success}" />
    <SolidColorBrush x:Key="WarningBrush" Color="{StaticResource Warning}" />
    <SolidColorBrush x:Key="DangerBrush" Color="{StaticResource Danger}" />
    <SolidColorBrush x:Key="InfoBrush" Color="{StaticResource Info}" />

    <!-- Layout brushes -->
    <SolidColorBrush x:Key="PageBackgroundBrush" Color="{StaticResource Primary}" />
    <SolidColorBrush x:Key="CardBackgroundBrush" Color="{StaticResource PrimaryDark}" />
    <SolidColorBrush x:Key="ToolbarBackgroundBrush" Color="{StaticResource Secondary}" />
    <SolidColorBrush x:Key="SeparatorBrush" Color="{StaticResource Gray200}" />

    <!-- Text brushes (text luôn là đen xám trên nền trắng xám) -->
    <SolidColorBrush x:Key="PrimaryTextBrush" Color="{StaticResource PrimaryDarkText}" />
    <SolidColorBrush x:Key="SecondaryTextBrush" Color="{StaticResource Gray600}" />
    <SolidColorBrush x:Key="MutedTextBrush" Color="{StaticResource Gray400}" />
    <SolidColorBrush x:Key="OnSecondaryTextBrush" Color="{StaticResource SecondaryDarkText}" />

    <!-- Button brushes -->
    <SolidColorBrush x:Key="ButtonBackgroundBrush" Color="{StaticResource Secondary}" />
    <SolidColorBrush x:Key="ButtonTextBrush" Color="{StaticResource SecondaryDarkText}" />
    <SolidColorBrush x:Key="ButtonOutlineBrush" Color="{StaticResource Gray300}" />

</ResourceDictionary>
